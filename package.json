    "webpack": "webpack --config webpack.config.js --mode production",
    "preversion": "npm test",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "author": "Marc Breitung <info@marcbreitung.de>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-loader": "^2.0.0",
    "mocha": "^5.1.0",
    "nyc": "^11.6.0",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  }
